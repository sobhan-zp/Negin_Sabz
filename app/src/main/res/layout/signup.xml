<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".Activity.SignIn">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">




        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/bg3"
            android:scaleType="centerCrop" />


    </FrameLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <LinearLayout
                android:id="@+id/ll_logo"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_above="@+id/fbl"
                android:layout_marginTop="50dp"
                android:gravity="center"
                android:orientation="vertical">


                <ImageView
                    android:id="@+id/head"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:layout_alignTop="@+id/linearLayout"
                    android:layout_centerHorizontal="true"
                    android:layout_gravity="center"
                    android:background="@drawable/logotext"
                    android:textColor="@color/Tex" />


            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_body"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@id/ll_logo"
                android:layout_marginTop="50dp"
                android:orientation="vertical">


                <android.support.design.widget.TextInputLayout
                    android:id="@+id/name_input_singup"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colortext"
                    android:textColorHint="@color/colorhint">

                    <customfonts.MyEditText
                        android:id="@+id/name_singup"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="46dp"
                        android:layout_marginRight="46dp"
                        android:background="#0000"
                        android:textDirection="rtl"
                        android:layout_gravity="left"
                        android:drawableLeft="@drawable/ic_name"
                        android:hint="نام کامل"
                        android:lines="1"
                        android:padding="14dp"
                        android:textColor="@color/Tex"
                        android:textColorHint="@color/textSub"
                        android:textSize="@dimen/text" />


                </android.support.design.widget.TextInputLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginLeft="56dp"
                    android:layout_marginRight="56dp"
                    android:background="@color/red" />



                <android.support.design.widget.TextInputLayout
                    android:id="@+id/user_input_singup"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colortext"
                    android:textColorHint="@color/colorhint">

                    <customfonts.MyEditText
                        android:id="@+id/user_singup"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="46dp"
                        android:textDirection="ltr"
                        android:layout_marginRight="46dp"
                        android:background="#0000"
                        android:drawableLeft="@drawable/ic_username"
                        android:hint="نام کاربری"
                        android:lines="1"
                        android:padding="14dp"
                        android:textColor="@color/Tex"
                        android:textColorHint="@color/textSub"
                        android:textSize="@dimen/text" />


                </android.support.design.widget.TextInputLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginLeft="56dp"
                    android:layout_marginRight="56dp"
                    android:background="@color/red" />


                <android.support.design.widget.TextInputLayout
                    android:id="@+id/email_input_singup"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colortext"
                    android:textColorHint="@color/colorhint">

                    <customfonts.MyEditText
                        android:id="@+id/email_singup"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="46dp"
                        android:layout_marginRight="46dp"
                        android:background="#0000"
                        android:drawableLeft="@drawable/ic_email"
                        android:textDirection="ltr"
                        android:hint="ایمیل"
                        android:inputType="textEmailAddress"
                        android:lines="1"
                        android:padding="14dp"
                        android:textColor="@color/Tex"
                        android:textColorHint="@color/textSub"
                        android:textSize="@dimen/text" />

                </android.support.design.widget.TextInputLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginLeft="56dp"
                    android:layout_marginRight="56dp"
                    android:background="@color/red" />


                <android.support.design.widget.TextInputLayout
                    android:id="@+id/mobile_input_singup"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colortext"
                    android:textColorHint="@color/colorhint">

                    <customfonts.MyEditText
                        android:id="@+id/mobile_singup"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="46dp"
                        android:layout_marginRight="46dp"
                        android:background="#0000"
                        android:backgroundTint="@color/Tex"
                        android:drawableLeft="@drawable/ic_mobile"
                        android:drawablePadding="12dp"
                        android:textDirection="ltr"
                        android:hint="موبایل"
                        android:inputType="phone"
                        android:lines="1"
                        android:padding="14dp"
                        android:textColor="@color/Tex"
                        android:textColorHint="@color/textSub"
                        android:textSize="@dimen/text" />


                </android.support.design.widget.TextInputLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginLeft="56dp"
                    android:layout_marginRight="56dp"
                    android:background="@color/red" />



                <android.support.design.widget.TextInputLayout
                    android:id="@+id/age_input_singup"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colortext"
                    android:textColorHint="@color/colorhint">

                    <customfonts.MyEditText
                        android:id="@+id/age_singup"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="46dp"
                        android:layout_marginRight="46dp"
                        android:background="#0000"
                        android:backgroundTint="@color/Tex"
                        android:drawableLeft="@drawable/ic_age"
                        android:textDirection="ltr"
                        android:drawablePadding="12dp"
                        android:gravity="right"
                        android:hint="سن"
                        android:inputType="number"
                        android:lines="1"
                        android:padding="14dp"
                        android:textColor="@color/Tex"
                        android:textColorHint="@color/textSub"
                        android:textSize="@dimen/text" />


                </android.support.design.widget.TextInputLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginLeft="56dp"
                    android:layout_marginRight="56dp"
                    android:background="@color/red" />


                <android.support.design.widget.TextInputLayout
                    android:id="@+id/pass_input_singup"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colortext"
                    android:textColorHint="@color/colorhint">


                    <customfonts.MyEditText
                        android:id="@+id/pass_singup"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="46dp"
                        android:layout_marginRight="46dp"
                        android:background="#0000"
                        android:drawableLeft="@drawable/ic_password"
                        android:drawablePadding="19dp"
                        android:gravity="right"
                        android:textDirection="ltr"
                        android:hint="رمز عبور"
                        android:inputType="textPassword"
                        android:padding="14dp"

                        android:textColor="@color/Tex"
                        android:textColorHint="@color/textSub"
                        android:textSize="@dimen/text"


                        />


                </android.support.design.widget.TextInputLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginLeft="56dp"
                    android:layout_marginRight="56dp"
                    android:background="@color/red" />

                <Spinner
                    android:id="@+id/sp_signup_city"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="56dp"
                    android:layout_marginRight="56dp"
                    android:padding="14dp" />


            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/ll_body"
                android:layout_centerHorizontal="true"
                android:orientation="vertical">


                <Button
                    android:id="@+id/btn_create_singup"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="60dp"
                    android:background="@drawable/rect1"
                    android:elevation="1.5dp"
                    android:gravity="center"
                    android:padding="12dp"
                    android:text="ساخت حساب کاربری"
                    android:textColor="#fff"
                    android:textSize="@dimen/text" />

            </LinearLayout>

           <!-- <LinearLayout
                android:id="@+id/ll_txt"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@id/ll_btn"
                android:layout_marginTop="50dp"
                android:gravity="center"
                android:orientation="horizontal">


                <customfonts.MyTextView
                    android:id="@+id/txt_signup_singup"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_marginRight="3dp"
                    android:gravity="center"
                    android:text="حساب کاربری ندارید؟"
                    android:textColor="@color/Tex"
                    android:textSize="@dimen/textsub"

                    />

                <customfonts.MyTextView
                    android:id="@+id/txt_signin_singup"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_marginLeft="3dp"
                    android:gravity="center"
                    android:text="@string/signin"
                    android:textColor="@color/greenDark"
                    android:textSize="@dimen/textsub"

                    />


            </LinearLayout>-->

        </LinearLayout>
    </ScrollView>


    <!-- logo -->


    <!-- body -->


</RelativeLayout>



